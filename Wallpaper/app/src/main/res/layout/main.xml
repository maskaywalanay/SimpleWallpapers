<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center">
	
			<android.support.v4.widget.DrawerLayout
				android:layout_height="@dimen/match_parent"
				android:layout_width="@dimen/match_parent"
				android:id="@+id/drawer_layout"
				android:layout_gravity="start|left">
				
				<LinearLayout
					android:layout_margin="@dimen/app_drawer_margin"
					android:background="@drawable/bg_relative"
					android:orientation="vertical"
					android:layout_height="fill_parent"
					android:layout_width="fill_parent">
					
					<FrameLayout
						android:layout_height="fill_parent"
						android:layout_width="fill_parent">
						
						<ScrollView
							android:layout_marginBottom="8dp"
							android:layout_marginTop="8dp"
							android:id="@+id/scroller"
							android:layout_height="fill_parent"
							android:layout_width="fill_parent">
						
						<LinearLayout
							android:orientation="vertical"
							android:layout_height="fill_parent"
							android:layout_width="fill_parent">
							
							<include
								layout="@layout/app_wallpaper"/>
									
						</LinearLayout>
						
						</ScrollView>
						
				</FrameLayout>
					
				</LinearLayout>
					
				<LinearLayout
					android:id="@+id/container_page"
					android:layout_gravity="start|left"
					android:layout_height="fill_parent"
					android:layout_width="@dimen/app_drawer_width">
							
					<include
						layout="@layout/app_drawer_main"/>
							
				</LinearLayout>
				
		</android.support.v4.widget.DrawerLayout>

</FrameLayout>

